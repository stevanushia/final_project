<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTimeoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Timeout Duration"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupTimeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 seconds" />

        <RadioButton
            android:id="@+id/radio30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 seconds" />

        <RadioButton
            android:id="@+id/radio60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 seconds" />

        <RadioButton
            android:id="@+id/radio75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75 seconds" />
    </RadioGroup>

    <Button
        android:id="@+id/btnStartTimeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Timeout"
        android:layout_marginTop="24dp" />
</LinearLayout>
