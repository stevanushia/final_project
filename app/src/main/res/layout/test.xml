<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212">

        <!-- Top Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home/Feed"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Profile Button -->
            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Profile"
                android:scaleType="centerInside"
                android:src="@drawable/ic_profile" />
        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:layout_above="@id/bottomNav"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Scoreboard Button -->
            <Button
                android:id="@+id/scoreboardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#1A8A9E"
                android:text="Scoreboard"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_scoreboard"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Tournament Button -->
            <Button
                android:id="@+id/tournamentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#1A8A9E"
                android:text="Tournament"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_tournament"
                android:drawablePadding="8dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#1C2526"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_home"
                android:contentDescription="Home" />

            <ImageButton
                android:id="@+id/exploreButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_explore"
                android:contentDescription="Explore" />

            <ImageButton
                android:id="@+id/createButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_create"
                android:contentDescription="Create"
                android:backgroundTint="#1A8A9E"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/arenaButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arena"
                android:contentDescription="Arena" />

            <ImageButton
                android:id="@+id/grandstandButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_grandstand"
                android:contentDescription="Grandstand" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>